<div>
    @Html.ActionLink("Operations", "index", "home", new { id = "operationscatalog" }, new { target = "_self", @class = "btn btn-info btn-md"})
    @Html.ActionLink("Materials", "index", "home", new { id = "materialscatalog" }, new { target = "_self", @class = "btn btn-info btn-md" })

    <button ng-click="displayOperationsCatalog()">Operations</button>
    <button ng-click="displayMaterialsCatalog()">Materials</button>

    <div ng-switch="select">
        <div ng-switch-when="1">
            <table class="col-lg-12" style="margin-left: 20px">
                <tr>
                    <th style="width:70%">Name</th>
                    <th>Quantity</th>
                </tr>
                <tr ng-repeat="material in materialsCatalog">
                    <td>{{material.Name}}</td>
                </tr>
            </table>
        </div>
        <div ng-switch-when="2">
            <h1>World</h1>
        </div>
    </div>
</div>
