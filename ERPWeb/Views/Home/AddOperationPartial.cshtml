<div id="add-operation" class="tabcontent">
    <div class="form-horizontal">
        <div class="form-group row">
            <label for="operation-name-input" class="col-xs-4">Operation name: </label>
            <div class="col-xs-8">
                <input type="text" class="form-control" ng-model="operationName" id="operation-name-input" />
            </div>
        </div>
        <div class="form-group row">
            <label for="operation-duration-input" class="col-xs-4">Operation duration (minutes): </label>
            <div class="col-xs-8">
                <input type="text" class="form-control" ng-model="operationDuration" id="operation-duration-input" />
            </div>
        </div>
        <div class="form-group row text-right">
            <button ng-click="saveOperation()" class="btn btn-info btn-sm col-xs-2 pull-right" style="margin-right:15px">Submit</button>
        </div>
    </div>
</div>
