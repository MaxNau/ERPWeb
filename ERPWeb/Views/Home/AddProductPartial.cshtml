<div>
    <div class="form-horizontal">
        <div class="form-group row">
            <label for="product-name-input" class="col-xs-4">Product name: </label>
            <div class="col-xs-8">
                <input type="text" class="form-control" ng-model="productName" id="product-name-input" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-xs-4">Required materials: </label>
        </div>
        <div class="form-group row">
            <table class="col-lg-12" style="margin-left: 20px">
                <tr>
                    <th style="width:70%">Name</th>
                    <th>Quantity</th>
                </tr>
                <tr ng-repeat="material in requiredMaterials">
                    <td>{{material.Name}}</td>
                    <td>{{material.Quantity}}</td>
                    <td><button class="btn btn-primary btn-xs" ng-click="deleteRequiredMaterial(material)">Remove</button></td>
                </tr>
            </table>
        </div>
        <div class="form-group row">
            <label class="form-control-static" style="margin-left: 20px">Add required material: </label>
        </div>
        <div class="form-group row">
            <table style="margin-left: 15px; margin-right: 15px">
                <tr>
                    <td width="10%">
                        <label class="form-control-static">Material name: </label>
                    </td>
                    <td width="50%">
                        <select class="form-control" ng-model="selected_material" ng-options="material.Name for material in materials"></select>
                    </td>
                    <td width="10%">
                        <label class="form-control-static">Quantity: </label>
                    </td>
                    <td width="25%">
                        <input class="form-control" ng-model="material_quantity" />
                    </td>
                    <td widh="5%">
                        <button ng-click="addRequiredMaterial()" class="btn-xs btn-primary">Add</button>
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <div class="form-group row">
        <button style="float:right; margin-right: 15px" ng-click="saveProduct()" class=" btn-info btn-sm">Submit</button>
    </div>
</div>